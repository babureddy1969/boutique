<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="7dp"
    android:background="@color/colorWhite"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/imgProfile"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rlSalary"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/txtName">

            <TextView
                android:id="@+id/txtPayment"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:maxLines="1"
                android:text="0.00"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtBalanceTitle"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/txtPayment"
                android:gravity="start"
                android:text="Balance Rs."
                android:textColor="@color/colorAccent"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/txtBalanceTitle"
                android:gravity="end"
                android:text="0.00"
                android:textColor="@color/colorRed"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtPayments"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="false"
                android:layout_toRightOf="@id/txtBalance"
                android:gravity="end"
                android:maxLines="1"
                card_view:drawableRightCompat="@android:drawable/ic_media_play" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rrDate"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rlSalary">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="false"
                android:gravity="start"
                android:maxLines="1"
                android:text="10-Jun-2022 10:10 AM"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/txtDate"
                android:gravity="end"
                android:paddingLeft="100dp"
                android:text="9999999999"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
